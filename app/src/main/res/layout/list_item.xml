<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="net.pmellaaho.rxapp.ui.CurrenciesAdapter.ViewHolder"/>

        <variable
            name="currency"
            type="net.pmellaaho.rxapp.model.Currency"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/listPreferredItemHeight"
        android:onClick="@{listener.onItemClick}"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/itemLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{currency.getCurrency}"
            android:textAppearance="?attr/textAppearanceListItemSmall"/>

        <TextView
            android:id="@+id/itemContributions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{Double.toString(currency.getRate)}"
            android:textAppearance="?attr/textAppearanceListItemSmall"/>
    </LinearLayout>

</layout>

