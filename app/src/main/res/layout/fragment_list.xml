<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fedorkzsoft.demo.presentation.ConvertorFragment">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <LinearLayout android:orientation="vertical"
        android:id="@+id/converter_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.fedorkzsoft.demo.ui.view.CurrencyPager
            android:background="#7788ff"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/pager_from"/>

        <com.fedorkzsoft.demo.ui.view.CurrencyPager
            android:background="#8877ff"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/pager_to"/>
    </LinearLayout>

</FrameLayout>
