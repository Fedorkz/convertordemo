<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zanlabs.widget.infiniteviewpager.InfiniteViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.zanlabs.widget.infiniteviewpager.indicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        app:strokeColor="@color/currency_pager_indicator_color"
        app:strokeWidth="1dp"
        app:fillColor="@color/currency_pager_indicator_color"
        app:pageColor="@color/currency_pager_indicator_unselected_color" />
</RelativeLayout>
